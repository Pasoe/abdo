<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:layout_marginBottom="2px">
    <TextView
        android:id="@+id/reg_row_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/reg_pain_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorOrange"
        android:src="@drawable/icon_pain"
        android:tint="@color/colorWhite"
        />
    <ImageView
        android:id="@+id/reg_toilet_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBrown"
        android:src="@drawable/icon_toilet"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/reg_food_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorGreen"
        android:src="@drawable/icon_food"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/reg_sleep_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorDarkGrey"
        android:src="@drawable/icon_sleep"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/reg_mood_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBlue"
        android:src="@drawable/icon_mood"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/reg_activity_answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorPurple"
        android:src="@drawable/icon_excersize"
        android:tint="@color/colorWhite"
        android:visibility="invisible"
        />
</LinearLayout>
