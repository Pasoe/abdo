<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBeige"
    tools:context="com.abdo.patrick.abdo.Views.RegisterChild.ChildStamData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBlue"
        android:padding="20dp"
        android:layout_marginBottom="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/stamdata_header_image"
            android:text="Angiv medicinen dit barn bruger"
            android:textSize="24dp"
            android:textColor="@color/colorWhite"/>
        <ImageView
            android:id="@+id/stamdata_header_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_medicine"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/medicine_type_row_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_medicine2"
            android:tint="@color/colorOrange"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_toRightOf="@id/medicine_type_row_icon"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Medicin"/>
            <EditText
                android:id="@+id/medicine_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Indtast medicin"
                android:textColorHint="@color/colorGrey"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/medicine_dosage_row_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_dosage"
            android:tint="@color/colorOrange"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_toRightOf="@id/medicine_dosage_row_icon"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Dosering"/>
            <EditText
                android:id="@+id/medicine_dosage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Indtast dosering"
                android:textColorHint="@color/colorGrey"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
        </LinearLayout>
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <RelativeLayout
        android:id="@+id/medicine_delete_button"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorOrange"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/medicine_delete_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_delete"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/medicine_delete_icon"
            android:background="@color/colorOrange">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:text="Slet"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
