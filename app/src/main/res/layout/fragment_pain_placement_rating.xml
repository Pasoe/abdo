<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abdo.patrick.abdo.Views.Registraion.Rating"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rating_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorOrange"
        android:padding="0dp"
        android:layout_marginBottom="2dp"
        >
        <ImageView
            android:id="@+id/rating_header_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_pain"
            android:tint="@color/colorWhite"/>
        <TextView
            android:layout_toRightOf="@+id/rating_header_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/pain_location"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:id="@+id/level_row_1"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/level_row_1_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_rating_5" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:id="@+id/level_text_row_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:id="@+id/level_row_2"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/level_row_2_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_rating_4" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:id="@+id/level_text_row_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:id="@+id/level_row_3"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/level_row_3_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_rating_3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:id="@+id/level_text_row_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:id="@+id/level_row_4"
        android:layout_marginBottom="2dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/level_row_4_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_rating_2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:id="@+id/level_text_row_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:id="@+id/level_row_5">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/level_row_5_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_rating_1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#FFFFFF"
            android:id="@+id/level_text_row_5" />
    </LinearLayout>
</LinearLayout>
